{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.1",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "18.13.0",
      "name": "ESLint",
      //"program": "C:/Users/rhob/AppData/Roaming/nvm/v18.13.0/npx",
      "program": "${env:NVM_SYMLINK}/npx.cmd",
      ///
      "args": [
        "eslint",
        "${workspaceFolder}/pg-client.ts",
        //"${workspaceFolder}/test/**/*.js",
      ],
      "env": {
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Tests",
      "program": "${workspaceFolder}/node_modules/ts-mocha/bin/ts-mocha",
      "runtimeVersion": "18.13.0",
      "env": {
        "NODE_ENV": "test-unit"
      },
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/unit/**/*.spec.ts",
      ],
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Test Coverage",
      "program": "${workspaceFolder}/node_modules/nyc/bin/nyc",
      "runtimeVersion": "18.13.0",
      // Run with "Start Without Debugging"
      "env": {
        "NODE_ENV"   : "test-unit"
      },
      "args": [
        //"--reporter=html",
        "ts-mocha",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/unit/**/*.spec.ts",
      ],
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "System Tests",
      "program": "${env:NVM_SYMLINK}/_mocha",
      "runtimeVersion": "18.13.0",
      "env": {
        "NODE_ENV": "test-unit"
      },
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/system/**/*.spec.js",
      ],
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "18.13.0",
      "name": "Update README",
      "program": "./node_modules/@rokit.js/verdaccio-readme-fixer/readme-fixer.js",
      "args": [
      ],
      "env": {
      },
    },
  ]
}